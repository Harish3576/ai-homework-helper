generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Submission {
  id        String   @id @default(cuid())
  ip        String
  question  String
  answer    String
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(cuid())
  email     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
}
